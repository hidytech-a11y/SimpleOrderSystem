@model SimpleOrderSystem.Application.DTOs.AdminDashboardDto

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger mb-0">Admin Dashboard</h2>

        <!-- Quick Admin Actions -->
        <div>
            <a asp-controller="Admin"
               asp-action="Orders"
               class="btn btn-outline-primary me-2">
                Manage Orders
            </a>

            <a asp-controller="Products"
               asp-action="Index"
               class="btn btn-outline-dark">
                Manage Products
            </a>
        </div>
    </div>

    <div class="row">
        <!-- TOTAL PRODUCTS -->
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase">Total Products</h6>
                    <h3 class="fw-bold">@Model.TotalProducts</h3>
                </div>
            </div>
        </div>

        <!-- TOTAL ORDERS -->
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase">Total Orders</h6>
                    <h3 class="fw-bold">@Model.TotalOrders</h3>
                </div>
            </div>
        </div>

        <!-- PENDING ORDERS -->
        <div class="col-md-3">
            <div class="card text-dark bg-warning mb-3 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase">Pending Orders</h6>
                    <h3 class="fw-bold">@Model.PendingOrders</h3>
                </div>
            </div>
        </div>

        <!-- TOTAL REVENUE -->
        <div class="col-md-3">
            <div class="card text-white bg-dark mb-3 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase">Total Revenue</h6>
                    <h3 class="fw-bold">
                        ₦@Model.TotalRevenue.ToString("N2")
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional Info -->
    <div class="alert alert-info mt-3">
        Use the <strong>Manage Orders</strong> button to update order statuses,
        and <strong>Manage Products</strong> to add or edit products.
    </div>
</div>
