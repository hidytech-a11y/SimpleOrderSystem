@model IEnumerable<SimpleOrderSystem.Domain.Entities.Order>

@using SimpleOrderSystem.Domain.Enums
@using SimpleOrderSystem.Web.Extensions

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h2 class="mb-4">My Orders</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You have not placed any orders yet.
        </div>
    }
    else
    {
        <div class="accordion" id="ordersAccordion">
            @foreach (var order in Model)
            {
                <div class="accordion-item mb-3">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed d-flex justify-content-between align-items-center"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#order-@order.Id">

                            <span>
                                <strong>@order.OrderNumber</strong>
                                &nbsp; — @order.OrderDate.ToShortDateString()
                                &nbsp; — ₦@order.TotalAmount.ToString("N2")
                            </span>

                            <span class="badge ms-3 @order.Status.ToBadgeClass()">
                                @order.Status
                            </span>
                        </button>
                    </h2>

                    <div id="order-@order.Id"
                         class="accordion-collapse collapse">
                        <div class="accordion-body">

                            <!-- ORDER TIMELINE -->
                            <partial name="_OrderTimeline" model="order.Status" />

                            <!-- ORDER ITEMS -->
                            <table class="table table-sm table-bordered mt-3">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in order.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.ProductId</td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end">
                                                ₦@item.UnitPrice.ToString("N2")
                                            </td>
                                            <td class="text-end"> 
                                                ₦@(item.Quantity* item.UnitPrice) 
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
