@model IEnumerable<SimpleOrderSystem.Domain.Entities.Order>

<h2>My Orders</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order No</th>
            <th>Date</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalAmount</td>
            </tr>
        }
    </tbody>
</table>
