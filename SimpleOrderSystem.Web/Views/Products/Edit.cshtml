@model SimpleOrderSystem.Domain.Entities.Product

<div class="container mt-4">
    <h2>Edit Product</h2>

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label>Name</label>
            <input name="name" value="@Model.Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Price</label>
            <input name="price" value="@Model.Price" type="number" step="0.01" class="form-control" />
        </div>

        <button class="btn btn-primary">Save</button>
    </form>
</div>
