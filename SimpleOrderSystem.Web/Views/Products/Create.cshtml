<div class="container mt-4">
    <h2>Create Product</h2>

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label>Name</label>
            <input name="name" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Price</label>
            <input name="price" type="number" step="0.01" class="form-control" />
        </div>

        <button class="btn btn-success">Create</button>
    </form>
</div>
